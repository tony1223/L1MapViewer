<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <!-- 主要日誌檔（保留 2 天） -->
    <target name="logFile" xsi:type="File"
            fileName="logs/L1MapViewer.log"
            layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff} [${level:uppercase=true}] ${logger} - ${message}${onexception:${newline}${exception:format=tostring}}"
            archiveFileName="logs/L1MapViewer.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveDays="2"
            keepFileOpen="true"
            concurrentWrites="false" />
  </targets>

  <rules>
    <!-- 所有 logger 的 Debug 以上寫入主日誌（用於效能分析） -->
    <logger name="*" minlevel="Debug" writeTo="logFile" />
  </rules>

</nlog>
